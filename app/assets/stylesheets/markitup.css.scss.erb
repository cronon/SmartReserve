#edit_description{
  .btn-red-border{
    height: 35px;
    padding: 4px 10px;
  }
}
#markItUpMarkItUp{ //id generates with some magic
  .markItUpResizeHandle {
    display:none;
  }
  .markItUpHeader{
    padding-left:5px;
  }
  .markItUpContainer {
    border: none;
    background: #6c6c6c;
    padding: 5px 0px 0px 0px;
    font: 11px Verdana, Arial, Helvetica, sans-serif;
  }
  .markItUpPreviewFrame {
    overflow: auto;
    background-color: #FFFFFF;
    border: none;
    width: 100%;
    height: 300px;
    margin: 0px 0;
  }
  .markItUpEditor {
    font: 15px 'PT Sans' 'Courier New', Courier, monospace;
    padding: 5px 5px 5px 5px;
    border: none;
    margin-top: 5px;
    width: 100%;
    height: 320px;
    background: white;
    clear: both;
    line-height: 18px;
    overflow: auto;
  }
  .markItUpSeparator {
    margin: 0 10px;
    width: 1px;
    height: 16px;
    overflow: hidden;
    background-color: #6c6c6c;
  }
  .markItUpButton, .markItUpButton a{
    width:47px;
    height: 47px;
  }
  .markItUpButton1 a{
    background-image: url(<%= asset_url 'markitup/header.png' %>);
  }
  .markItUpButton2 a{
    background-image: url(<%= asset_url 'markitup/bold.png' %>);
  }
  .markItUpButton3 a{
    background-image: url(<%= asset_url 'markitup/italic.png' %>);
  }
  .markItUpButton4 a{
    background-image: url(<%= asset_url 'markitup/bullets.png' %>);
  }
  .markItUpButton5 a{
    background-image: url(<%= asset_url 'markitup/numbering.png' %>);
  }
  .markItUpButton6 a{
    background-image: url(<%= asset_url 'markitup/image.png' %>);
  }
  .markItUpButton7 a{
    background-image: url(<%= asset_url 'markitup/link.png' %>);
  }
  .markItUpButton8 a{
    background-image: url(<%= asset_url 'markitup/preview.png' %>);
  }
}