#edit_description{
  .btn-red-border{
    height: 35px;
    padding: 4px 10px;
  }
}
#markItUpMarkItUp{ //id builds with some mmagic
  .markItUpEditor {
    font: 15px 'PT Sans' 'Courier New', Courier, monospace;
    padding: 5px 5px 5px 5px;
    border: 3px solid #3C769D;
    width: 100%;
    height: 320px;
    background: white;
    clear: both;
    line-height: 18px;
    overflow: auto;
  }
  .markItUpSeparator {
    margin: 0 10px;
    width: 1px;
    height: 16px;
    overflow: hidden;
    background-color: white;
  }
  .markItUpButton{
    width:47px;
    height: 47px;
  }
  .markItUpButton7 a{
    background-image: url(<%= asset_url 'markitup/bold.png' %>);
    width:47px;
    height:47px;
  }
  .markItUpContainer {
    border: 1px solid #3C769D;
    background: white;
    padding: 5px 5px 2px 5px;
    font: 11px Verdana, Arial, Helvetica, sans-serif;
  }
}