}
.rating{
  padding: 5px;
}
.before_footer_a{
  font-size:1.1em;
  color: #082bc5;
  text-decoration:underline;
}
.before-footer-h3{
  margin-top:0;
}
#navigation a{
  text-decoration: underline;
}

#restaurants a{
  color:black;
}

.sales-slider{
