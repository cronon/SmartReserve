  margin-left:17.6667%;
}
#all_news{
  position: absolute;
  bottom: 0px;
  right: 16.8%;
  font-size: 1.1em;
}
#all_news a{
  text-decoration: underline;
  color: red;
}
#social_widgets > li > a:hover{
  background-color: #555
}
#social_widgets > li > a{
  border:none;
}
div > .btn-my {
  background-color: #ffffff;
  border-color: #ec5c5c;
  border-width:2px;
  color: #ec5c5c;
  height: 36px;
  font-size:18px;
  height:50px;
}
.btn-my > a{
  color:#ec5c5c;
  vertical-align: middle;
}
