div > div.btn-red{
  @extend .btn-danger;
  font-size: 17px;
  padding: 2px 6px 2px;
}

#clubs_show{

  .average-price{
    position:absolute;
    bottom:0px;
    right:0px;
    font-weight:bold;
  }

  .club-info{
    float:left;
    padding-right:40px;
    font-size: 13px;

    td{
      padding: 0 5px 25px 0;
      max-width:110px;
    }

    ul{
      list-style-image: url("<%= asset_path 'clubs_show/marker.png' %>");

      li{
        margin-left: -19px;
      }
    }
  }

  .club-contact{
    display: table-row;
    padding-bottom:25px;
    .contact-img {
      float:left;
      padding-right: 5px;
      margin-bottom: 9%;
    }
    .contact-text{
      float:left;
      width:110px;
    }
  }

  .button-wrapper{
    float:left;
    padding-right: 10px;
  }
  .caption{
    text-align: center;
    font-size: 15px;
    color: #ec5c5c;
  }
  a{
    text-decoration: underline;
  }
  .club-photo-thumb{
    float:left; 
    padding-right:15px;
    padding-top: 15px;
  }

  .club-photo-thumb:nth-child(4){
    padding-right:0;
  }
}

.club-wrapper-catalog{

  float:left;
  padding-right: 30px;
  padding-bottom: 25px;

  .club-div{
    width: 305px;
    height:210px;
    border-color:#ccc;
    border-style:solid;
    border-width:1px;
    border-radius:5px;
  }
  .title-on-avatar{
    width: initial;
    text-align: left;
    font-size: 18px;
    padding-top: 5px;
  }
  .white-on-avatar{
    width: 100%;
    background-color: rgba(255,255,255,0.65);
    position: relative;
  }
  .address-on-avatar {
    font-size: 14px;
  }
  .top-right-icon {
    position: absolute;
    right: 8px;
    top: 5px
  }
  .rating{
    float: left;
    margin-top: 9px;
  }
  .rating-img{
    /* margin: 0 auto; */
    display: inline;
    margin-bottom: 7px;
  }
  .rating-value {
    padding-left: 5px;
  }
  .text-on-avatar {
    font-size: 15px;
    margin-top: -5px;
  }
  .reservation-btn-wrapper{
    float: right;
    padding: 0px;
    padding-top: 3px;
    padding-right: 8px;
  }
}

.align-right{
  position:absolute;
  right:30px;
}
div.selectize-input.items.full.has-options{
  height: 25px;
  min-height: 25px;
  padding-top: 4px;
}
div.catalog-filter {
  border: 2px solid #ec5c5c;
  border-radius: 5px;
  padding: 19px;
  font-size: 13px;
  width: calc(100% + 50px);
  margin-left: -30px;
}
div.catalog-filter a {
  text-decoration: underline;
}
h3{
  color:black;
}

#menu > ul >  li > a:hover{
  background-color:inherit;
}

.red{
  color:#ec5c5c;
}

.club-image{
  height:140px;
  width:210px;
  display: table;
}
.club-wrapper{
  float: left;
  padding-left: 5px;
  padding-bottom: 10px;
}
.club-div{
  width: 212px;
  border-color:#ccc;
  border-style:solid;
  border-width:1px;
  border-radius:5px;
}
.title-on-avatar{
  width: 100%;
  text-align: center;
  font-size: 20px;
  padding-top: 5px;
}
.white-on-avatar{
  margin-top: 15px;
  height: 35px;
  width: 155px;
  background-color: rgba(255,255,255,0.65);
  padding-left: 5px;
}
.text-on-avatar {
  font-size: 15px;
  margin-top: -5px;
}
.date-on-avatar{
  color: #ec5c5c;
  font-size: 13px;
  font-style: italic;
  font-weight: bold;
}
.reservation-btn-wrapper{
  float:right;
