.team-slider{
  #team_slider_ul{
    margin-top:30px;
  }
  .teammate{
    height:200px;
    width:190px;

    .caption{
      text-align:center;
    }
    .pic{
      width:130px;
      height:130px;
      border-radius: 500px;
      border: 5px solid #ec5c5c;
      cursor:pointer;
      margin: 0 auto;
      background-image: url('<%= asset_path("team/cat.png") %>');
    }
    .pic:hover + .caption{
      display:none;
    }
    div.pic:hover{
      width:190px;
      height:190px;
      margin-top: -30px;
      // margin-left: -15px;
      background-image: url('<%= asset_path("team/cat-bigger.png") %>');
    }
  }
}

