<% if @order.errors.any? %>
  $('#confirmation_dialog').html("<%= j(render(partial:'confirmation', object: @order)) %>");
<% else %>
  $('#confirmation_dialog').modal('hide')
  $('#succes_dialog').modal();
  $('#succes_date').html("<%= j @order.time.strftime('%d.%m.%Y') %>");
  $('#succes_time').html("<%= j @order.time.strftime('%H:%M') %>");
  //window.location.replace("<%= club_order_url(@order.table.club, @order) %>");
  <% #  а то по кнопке назад будет confirmation_dialog %>
<% end %>
