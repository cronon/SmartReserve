.links-orders-by-time
      - Order.intervals.keys.each_with_index do |interval, index|
        - if params[:interval] == interval.to_s
          = t(".#{interval.to_s}")
        - else
          a.interval-link onclick="ordersByTimeInterval('#{interval.to_s}')" 
            = t(".#{interval.to_s}")
        = " | " if index != Order.intervals.size - 1
