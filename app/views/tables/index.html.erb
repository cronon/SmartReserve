
<script type="text/javascript">
  function showDialogModal() 
  {
    $('#dialog_form').dialog( {
      show : "slide",
      hide : "toggle",
      width: 800,
      height: 300,
      modal: true,
      title: "Create order",
      buttons: {
        "Cancel" : function()
        {
            $("#dialog_form").dialog("close");
        }
      }
    }).prev().find(".ui-dialog-titlebar-close").hide(); // To hide the standard close button
  }

  $(document).ready(function() {
    $('#dialog_form').hide();
    $('#do_order').each.button().click(showDialogModal);
  });
</script>

<div id="tables">
<% @tables.each do |table|%>
  <div id="table_<%= table.id %>">
    <div id="<%= get_color_table(table, @time)%>">
      <button id="do_order"><%= table.id %></button>
    </div>
  </div>
<% end -%>
</div>

<div id="navigation_column">
  Time on witch want do order:
  <b></b>
  <br>
  <%= select_datetime(@time, {day: true, month: true, year: true}) %>
</div>

<div id="dialog_form">
  <%= render "orders/form" %>
</div>

