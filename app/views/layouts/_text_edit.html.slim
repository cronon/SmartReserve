.modal.fade id="#{id}" aria-hidden="true" aria-labelledby="features_modalLabel" role="dialog" tabindex="-1" 
  .modal-dialog style="width:740px"
    .modal-content style="width:740px"
      .modal-body
        = f.text_area :description, :class => 'text_field', :id => "markItUp"
      div style="text-align:center;padding:5px"
        button.btn.btn-red-border style="" type="submit"  ОК
        button.btn.btn-red-border style="margin-left:5px" data-dismiss="modal" type="button"  Отмена
      javascript:
        $(document).ready(function(){
          mySettings = $.extend(true,{},markdownSettings); // global for debug purposes
          mySettings.markupSet = markdownSettings.markupSet. 
                  filter(function(o){
                    return [
                      "Quotes",
                      "Code Block / Code",
                      "First Level Heading",
                      "Second Level Heading",
                      "Heading 4",
                      "Heading 6",
                      "Heading 5"
                      ].indexOf(o.name)==-1 || o.separator;
                  });
          $("#markItUp").markItUp(mySettings);
        });